FUNCTION(BUILD_PKCONFIG FILE)
  FILE(WRITE ${FILE} "prefix=${CMAKE_INSTALL_PREFIX}\n")
  FILE(READ   ${SF_ETC}/${PROJECT_NAME}.pc CONTENTS)
  FILE(APPEND ${FILE} "${CONTENTS}")
  SET(LIBDIR "\\$\\{libdir\\}")
  STRING(REPLACE "\\" ""  LIBDIR ${LIBDIR})
  IF(MKL_FOUND)
    FILE(APPEND ${FILE} "Libs: -L${LIBDIR} -lscifor ${MKL_LIBRARIES}\n")
  ELSEIF(BLAS_FOUND OR LAPACK_FOUND)
    IF(SCALAPACK_FOUND)
      IF(APPLE)
	FILE(APPEND ${FILE} "Libs: -L${LIBDIR} -lscifor ${SCALAPACK_LIBRARIES} -llapack -lblas\n")
      ELSE()
	FILE(APPEND ${FILE} "Libs: -L${LIBDIR} -lscifor ${SCALAPACK_LIBRARIES} ${LAPACK_LIBRARIES}${BLAS_LIBRARIES}\n")
      ENDIF(APPLE)
    ELSE()
      IF(APPLE)
	FILE(APPEND ${FILE} "Libs: -L${LIBDIR} -lscifor -llapack -lblas\n")
      ELSE()
	FILE(APPEND ${FILE} "Libs: -L${LIBDIR} -lscifor ${LAPACK_LIBRARIES} ${BLAS_LIBRARIES}\n")
      ENDIF(APPLE)
    ENDIF(SCALAPACK_FOUND)
  ELSE()
    FILE(APPEND ${FILE} "Libs: -L${LIBDIR} -lscifor\n")
  ENDIF()
  FILE(APPEND ${FILE} "Version:${VERSION}\n")
ENDFUNCTION()
