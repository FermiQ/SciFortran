FUNCTION(BUILD_PKCONFIG FILE)
  FILE(WRITE ${FILE} "prefix=${CMAKE_INSTALL_PREFIX}\n")
  FILE(READ   ${SF_ETC}/${PROJECT_NAME}.pc CONTENTS)
  FILE(APPEND ${FILE} "${CONTENTS}")
  SET(LIBDIR "\\$\\{libdir\\}")
  STRING(REPLACE "\\" ""  LIBDIR ${LIBDIR})
  IF(MKL_FOUND)
    FILE(APPEND ${FILE} "Libs: ${MKL_LIBRARIES} -L${LIBDIR} -lscifor\n")
  ELSEIF(BLAS_FOUND OR LAPACK_FOUND)
    IF(APPLE)
      FILE(APPEND ${FILE} "Libs: -lblas -llapack -L${LIBDIR} -lscifor\n")
    ELSE()
      FILE(APPEND ${FILE} "Libs: ${BLAS_LIBRARIES} ${LAPACK_LIBRARIES} -L${LIBDIR} -lscifor\n")
    ENDIF()
  ELSE()
    FILE(APPEND ${FILE} "Libs: -L${LIBDIR} -lscifor\n")
  ENDIF()
  FILE(APPEND ${FILE} "Version:${VERSION}\n")
ENDFUNCTION()
